@model AirTiquiciaTry.Models.VuelosModel

<h4>Buscar Vuelos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="VuelosEncontrados">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="fechaSalida" class="control-label mb-3"></label>
                <input type="date" asp-for="fechaSalida" class="form-control mb-3" />
                <span asp-validation-for="fechaSalida" class="text-danger"></span>
            </div>
              <p class="">Origen</p>
          @Html.DropDownList("origen_iata", ViewBag.listaAeropuertos as SelectList, "Seleccione su origen", new {@class = "form-control mb-3"})
          @Html.ValidationMessageFor(model=>model.origen_iata,"",new {@class = "text-danger"})
           <p class="">Destino</p>
          @Html.DropDownList("destino_iata", ViewBag.listaAeropuertos as SelectList, "Seleccione su destino", new {@class = "form-control mb-3"})
          @Html.ValidationMessageFor(model=>model.destino_iata,"",new {@class = "text-danger"}) 
          <div class="form-group">
                <input type="submit" value="Buscar Vuelos" class="btn btn-success mb-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}