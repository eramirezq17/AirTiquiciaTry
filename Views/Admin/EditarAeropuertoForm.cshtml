@model AirTiquiciaTry.Models.AeropuertosModel

<h4>Editar Aeropuerto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProcessEditarAeropuerto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cod_iata" class="control-label"></label>
                <input asp-for="cod_iata" class="form-control" />
                <span asp-validation-for="cod_iata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombre_aeropuerto" class="control-label"></label>
                <input asp-for="nombre_aeropuerto" class="form-control" />
                <span asp-validation-for="nombre_aeropuerto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cod_pais" class="control-label"></label>
                <input asp-for="cod_pais" class="form-control" />
                <span asp-validation-for="cod_pais" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="nombre_pais" class="control-label"></label>
                <input asp-for="nombre_pais" class="form-control" />
                <span asp-validation-for="nombre_pais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success mb-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Aeropuertos" class="btn btn-primary">Regresar a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
