@model AirTiquiciaTry.Models.VuelosModel

<h4>Nuevo Vuelo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProcessAgregarVuelo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id_vuelo" class="control-label"></label>
                <input asp-for="id_vuelo" class="form-control" />
                <span asp-validation-for="id_vuelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fecha_hora" class="control-label"></label>
                <input asp-for="fecha_hora" class="form-control" />
                <span asp-validation-for="fecha_hora" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="es_directo" class="control-label">El vuelo es Directo Si o No? (Y=Si, N=No)</label>
               <select asp-for="es_directo" id=es_directo name="es_directo" class="form-control">
                <option value="Y">Si (Y)</option>
                <option value="N">No (N)</option>
                <span asp-validation-for="es_directo" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="id_avion" class="control-label"></label>
                <input asp-for="id_avion" class="form-control" />
                <span asp-validation-for="id_avion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="origen_iata" class="control-label"></label>
                <input asp-for="origen_iata" class="form-control" />
                <span asp-validation-for="origen_iata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="destino_iata" class="control-label"></label>
                <input asp-for="destino_iata" class="form-control" />
                <span asp-validation-for="destino_iata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="duracion" class="control-label"></label>
                <input asp-for="duracion" class="form-control" />
                <span asp-validation-for="duracion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_capitan" class="control-label"></label>
                <input asp-for="id_capitan" class="form-control" />
                <span asp-validation-for="id_capitan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_copiloto" class="control-label"></label>
                <input asp-for="id_copiloto" class="form-control" />
                <span asp-validation-for="id_copiloto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_tripulante_cabina" class="control-label"></label>
                <input asp-for="id_tripulante_cabina" class="form-control" />
                <span asp-validation-for="id_tripulante_cabina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precio_economica" class="control-label"></label>
                <input asp-for="precio_economica" class="form-control" />
                <span asp-validation-for="precio_economica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precio_primera" class="control-label"></label>
                <input asp-for="precio_primera" class="form-control" />
                <span asp-validation-for="precio_primera" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="precio_equipaje_kilo" class="control-label"></label>
                <input asp-for="precio_equipaje_kilo" class="form-control" />
                <span asp-validation-for="precio_equipaje_kilo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-success mb-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Vuelos" class="btn btn-primary">Regresar a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
